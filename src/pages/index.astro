---
import BaseLayout from '../layouts/BaseLayout.astro';
import lessonsData from '../../public/lessons.json';

// Get today's day of year (1-365)
const now = new Date();
const start = new Date(now.getFullYear(), 0, 0);
const diff = now - start;
const oneDay = 1000 * 60 * 60 * 24;
const dayOfYear = Math.floor(diff / oneDay);

// Get today's lesson
const todayLesson = lessonsData.lessons.find(l => l.dayOfYear === dayOfYear) || lessonsData.lessons[0];

// Format date
const options = { month: 'long', day: 'numeric' };
const formattedDate = now.toLocaleDateString('en-US', options);

// Get unique categories count
const categoriesCount = new Set(lessonsData.lessons.map(l => l.category)).size;
---

<BaseLayout title="Knowly - Learn Something New Every Day">
  <!-- Hero Section -->
  <section class="relative overflow-hidden">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-24 md:py-32">
      <div class="text-center">
        <div class="inline-flex items-center gap-2 bg-highlight text-primary px-4 py-2 rounded-full text-sm font-medium mb-8">
          <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/>
          </svg>
          {formattedDate} - Day {dayOfYear} of 365
        </div>
        <h1 class="text-5xl md:text-6xl font-bold text-text mb-6 text-display">
          Today's Lesson
        </h1>
        <p class="text-xl text-text-secondary max-w-2xl mx-auto mb-4">
          Expand your knowledge with a new fascinating lesson every day
        </p>

        <!-- App Preview Card - Today's Actual Lesson -->
        <a href="/today" class="block max-w-md mx-auto mt-12 mb-12 group">
          <div class="card p-6 transition-shadow group-hover:shadow-lg">
            <div class="flex items-center justify-between mb-4">
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 bg-secondary-light rounded-full flex items-center justify-center">
                  <span class="text-secondary font-semibold text-sm">
                    {todayLesson.category === 'Mathematics' ? 'f(x)' : todayLesson.category.charAt(0)}
                  </span>
                </div>
                <span class="text-secondary text-sm font-semibold tracking-wider uppercase">{todayLesson.category}</span>
              </div>
              <span class="text-text-muted text-sm">{formattedDate}</span>
            </div>
            <h3 class="text-2xl font-bold text-text mb-3 text-left">{todayLesson.title}</h3>
            <div class="w-12 h-1 bg-secondary rounded-full mb-4"></div>
            <p class="text-text-secondary text-left leading-relaxed line-clamp-3">
              {todayLesson.content}
            </p>

            <!-- Did you know box -->
            <div class="highlight-box mt-6">
              <div class="flex items-center gap-2 mb-2">
                <span class="text-lg">ðŸ’¡</span>
                <span class="font-semibold text-text text-sm">Did you know?</span>
              </div>
              <p class="text-text-secondary text-sm line-clamp-2">
                {todayLesson.funFact}
              </p>
            </div>

            <div class="mt-6 text-secondary text-sm font-medium flex items-center justify-center gap-2 group-hover:underline">
              Read full lesson
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </div>
          </div>
        </a>

        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <a
            href="/lessons"
            class="btn-secondary inline-flex items-center justify-center text-lg"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"/>
            </svg>
            Browse All {lessonsData.lessons.length} Lessons
          </a>
          <a
            href="/coming-soon"
            class="btn-primary inline-flex items-center justify-center text-lg"
          >
            <svg class="w-6 h-6 mr-2" viewBox="0 0 24 24" fill="currentColor">
              <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
            </svg>
            Download for iOS
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-24">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-text mb-4 text-display">
          Why Knowly?
        </h2>
        <p class="text-text-secondary">Build your personal library of wisdom</p>
      </div>
      <div class="grid md:grid-cols-3 gap-6">
        <div class="card p-8">
          <div class="w-14 h-14 bg-secondary-light rounded-2xl flex items-center justify-center mb-6">
            <svg class="w-7 h-7 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-text mb-3">Daily Lessons</h3>
          <p class="text-text-secondary">
            A new fascinating lesson every day. 365 unique topics across {categoriesCount} categories.
          </p>
        </div>
        <div class="card p-8">
          <div class="w-14 h-14 bg-highlight rounded-2xl flex items-center justify-center mb-6">
            <svg class="w-7 h-7 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-text mb-3">Browse & Search</h3>
          <p class="text-text-secondary">
            Explore all lessons with powerful filtering. Find exactly what interests you.
          </p>
        </div>
        <div class="card p-8">
          <div class="w-14 h-14 bg-secondary-light rounded-2xl flex items-center justify-center mb-6">
            <svg class="w-7 h-7 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
            </svg>
