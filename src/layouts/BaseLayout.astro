---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Knowly - Learn something new every day' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-background text-text antialiased">
    <nav class="fixed top-0 w-full bg-background/90 backdrop-blur-md z-50">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <a href="/" class="text-xl font-bold text-text">Knowly</a>
          <div class="flex items-center gap-1 bg-card rounded-full p-1 shadow-sm">
            <a href="/today" class="px-3 py-2 rounded-full text-sm font-medium text-text-secondary hover:text-text transition-colors">
              Today
            </a>
            <a href="/lessons" class="px-3 py-2 rounded-full text-sm font-medium text-text-secondary hover:text-text transition-colors">
              Browse
            </a>
            <a
              href="https://apps.apple.com/app/knowly"
              class="bg-primary hover:bg-primary-dark text-white px-4 py-2 rounded-full text-sm font-medium transition-colors"
            >
              Download
            </a>
          </div>
        </div>
      </div>
    </nav>

    <main class="pt-20">
      <slot />
    </main>

    <footer class="bg-background-secondary mt-20">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="flex flex-col md:flex-row justify-between items-center gap-4">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-primary rounded-xl flex items-center justify-center">
              <span class="text-white font-bold text-lg">K</span>
            </div>
            <span class="font-semibold text-text">Knowly</span>
          </div>
          <p class="text-text-muted text-sm">
            &copy; {new Date().getFullYear()} Knowly. All rights reserved.
          </p>
          <div class="flex gap-6">
            <a href="/privacy" class="text-text-secondary hover:text-text text-sm transition-colors">Privacy Policy</a>
            <a href="/terms" class="text-text-secondary hover:text-text text-sm transition-colors">Terms of Service</a>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
